<div class="cluster">
  <ul class="cluster-children-wrapper">
    {% for tag in tags %}
      {% if tag != "post" %}
        {% set text = tag %}
        {% set href %}/tags/{{ text }}/{% endset %}
        <li>{% include "components/pill.njk" %}</li>
      {% endif %}
    {% endfor %}
  </ul>
</div>