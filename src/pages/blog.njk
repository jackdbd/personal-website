{% block content %}

<div id="wrapper-for-sticky-footer">

  {% include "components/header.njk" %}

  <is-land on:visible autoinit="preact" import="/assets/js/preact-components/back-to-top.js"></is-land>

  <main class="wrapper">
    <div class="flow region">
      <h1>{{ title }}</h1>
      <div class="flow">
        <div id="search"></div>
        {% set posts = collections.post %}
        {% include "components/post-list.njk" %}
      </div>
    </div>
  </main>

  {% include "components/footer.njk" %}

</div>

<script>
  window.addEventListener('DOMContentLoaded', (event) => {
    new PagefindUI({ element: "#search", showSubResults: true });
  });
</script>

{% endblock content %}

{# inlined CSS assets (critical CSS) #}
<link data-helmet href="/pagefind/pagefind-ui.css" rel="stylesheet">

{# inlined JS assets (critical JS) #}
<script data-helmet src="/pagefind/pagefind-ui.js"></script>

{# external CSS assets #}
<link data-helmet rel="stylesheet" href="/assets/css/components.css">
<link data-helmet rel="stylesheet" href="/assets/css/utilities.css">

{# external JS assets #}
