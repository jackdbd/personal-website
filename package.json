{
  "name": "personal-website",
  "description": "My personal website and blog",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Giacomo Debidda",
  "homepage": "https://www.giacomodebidda.com/",
  "repository": "git@github.com:jackdbd/personal-website.git",
  "keywords": [
    "11ty",
    "blog",
    "JAMstack",
    "workbox"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm-run-all --parallel build:*",
    "build:11ty": "ELEVENTY_ENV=production eleventy",
    "build:css": "postcss tailwind.css -o _site/assets/css/style.css --env production --verbose",
    "postbuild": "ls --size --human-readable _site/ | head -n 1",
    "clean": "find _site/* -not -name 'README.md' -delete",
    "predev": "npm run clean",
    "dev": "npm-run-all --parallel dev:*",
    "dev:11ty": "ELEVENTY_ENV=development eleventy --serve --quiet",
    "dev:css": "postcss tailwind.css -o _site/assets/css/style.css --env development --watch --verbose",
    "format": "prettier --write '{,!(node_modules)/}**/*.js'",
    "headers:home": "chromium-browser https://securityheaders.com/?q=$DOMAIN&followRedirects=on https://observatory.mozilla.org/analyze/$DOMAIN",
    "lh": "npm-run-all --parallel lh:blog lh:home --serial lh:reports",
    "lh:article": "npm-run-all --parallel lh:article:*",
    "lh:article:desktop": "lighthouse https://www.$DOMAIN/posts/$ARTICLE_SLUG/ --config-path ./lighthouse/config/desktop.js --budget-path=./lighthouse/budgets/all-desktop.json --output-path=./lighthouse/reports/article-desktop.html --quiet",
    "lh:article:mobile": "lighthouse https://www.$DOMAIN/posts/$ARTICLE_SLUG/ --config-path ./lighthouse/config/mobile.js --budget-path=./lighthouse/budgets/all-mobile.json --output-path=./lighthouse/reports/article-mobile.html --quiet",
    "lh:blog": "npm-run-all --parallel lh:blog:*",
    "lh:blog:desktop": "lighthouse https://www.$DOMAIN/blog/ --config-path ./lighthouse/config/desktop.js --budget-path=./lighthouse/budgets/all-desktop.json --output-path=./lighthouse/reports/blog-desktop.html --quiet",
    "lh:blog:mobile": "lighthouse https://www.$DOMAIN/blog/ --config-path ./lighthouse/config/mobile.js --budget-path=./lighthouse/budgets/all-mobile.json --output-path=./lighthouse/reports/blog-mobile.html --quiet",
    "lh:audits": "lighthouse --list-all-audits",
    "lh:contact": "npm-run-all --parallel lh:contact:*",
    "lh:contact:desktop": "lighthouse $DOMAIN/contact/ --config-path ./lighthouse/config/desktop.js --budget-path=./lighthouse/budgets/all-desktop.json --output-path=./lighthouse/reports/contact-desktop.html --quiet",
    "lh:contact:mobile": "lighthouse $DOMAIN/contact/ --config-path ./lighthouse/config/mobile.js --budget-path=./lighthouse/budgets/all-mobile.json --output-path=./lighthouse/reports/contact-mobile.html --quiet",
    "lh:home": "npm-run-all --parallel lh:home:*",
    "lh:home:desktop": "lighthouse https://www.$DOMAIN/ --config-path ./lighthouse/config/desktop.js --budget-path=./lighthouse/budgets/all-desktop.json --output-path=./lighthouse/reports/home-desktop.html --quiet",
    "lh:home:mobile": "lighthouse https://www.$DOMAIN/ --config-path ./lighthouse/config/mobile.js --budget-path=./lighthouse/budgets/all-mobile.json --output-path=./lighthouse/reports/home-mobile.html --quiet",
    "lh:projects": "npm-run-all --parallel lh:projects:*",
    "lh:projects:desktop": "lighthouse $DOMAIN/projects/ --config-path ./lighthouse/config/desktop.js --budget-path=./lighthouse/budgets/all-desktop.json --output-path=./lighthouse/reports/projects-desktop.html --quiet",
    "lh:projects:mobile": "lighthouse $DOMAIN/projects/ --config-path ./lighthouse/config/mobile.js --budget-path=./lighthouse/budgets/all-mobile.json --output-path=./lighthouse/reports/projects-mobile.html --quiet",
    "lh:reports": "python -m webbrowser lighthouse/reports/",
    "lhci": "lhci autorun --config lighthouse/lighthouserc-local.js",
    "nuke": "rm -rf package-lock.json node_modules",
    "netlify:admin": "netlify open --admin",
    "netlify:deploy-preview": "netlify deploy -m 'Deploy from Netlify CLI' --debug --open",
    "ncu": "ncu --loglevel verbose",
    "ncuu": "ncu --doctor --upgrade",
    "netlify:dev": "netlify dev --command 'npm run dev' --live",
    "prepare": "husky install",
    "test": "echo TODO tests with puppeteer, playwright, taiko, or cypress",
    "versions": "eleventy --version && postcss --version && tailwindcss --version && netlify --version",
    "webhint:blog": "hint $DOMAIN/blog/",
    "webhint:home": "hint $DOMAIN/",
    "webhint:projects": "hint $DOMAIN/projects/",
    "webhint:reports": "serve hint-report/"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ],
  "devDependencies": {
    "@11ty/eleventy": "0.12.1",
    "@11ty/eleventy-navigation": "0.1.6",
    "@11ty/eleventy-plugin-rss": "1.1.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "3.1.0",
    "@hint/hint-performance-budget": "2.4.9",
    "ackee-tracker": "^5.1.0",
    "autoprefixer": "10.2.5",
    "clean-css": "5.1.2",
    "cssnano": "^4.1.11",
    "dotenv": "^8.2.0",
    "eleventy-plugin-embed-cloudinary": "^1.0.1",
    "eleventy-plugin-embed-twitter": "^1.3.0",
    "eleventy-plugin-emoji": "^1.1.0",
    "eleventy-plugin-helmet": "^0.2.2",
    "eleventy-plugin-nesting-toc": "^1.3.0",
    "eleventy-plugin-reading-time": "0.0.1",
    "eleventy-plugin-vimeo-embed": "^1.3.0",
    "eleventy-plugin-youtube-embed": "^1.5.0",
    "got": "^9.6.0",
    "graphql": "^15.5.0",
    "graphql-request": "^3.4.0",
    "himalaya": "^1.1.0",
    "hint": "6.1.3",
    "html-minifier": "4.0.0",
    "husky": "^6.0.0",
    "instant.page": "^5.1.0",
    "lighthouse": "7.3.0",
    "luxon": "1.26.0",
    "markdown-it": "12.0.4",
    "markdown-it-anchor": "7.1.0",
    "netlify-plugin-csp-generator": "^1.3.1",
    "npm-check-updates": "11.3.0",
    "npm-run-all": "4.1.5",
    "ntl": "5.1.0",
    "postcss": "8.2.9",
    "postcss-cli": "8.3.1",
    "prettier": "2.2.1",
    "serve": "^11.3.2",
    "tailwindcss": "^2.1.1",
    "terser": "^5.6.1",
    "uglify-es": "^3.3.9",
    "uuid": "^3.3.2",
    "winston": "^3.3.3",
    "workbox-build": "^6.1.2"
  }
}
