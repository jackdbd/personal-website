{
  "name": "personal-website",
  "description": "My personal website and blog",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Giacomo Debidda",
  "private": true,
  "homepage": "https://www.giacomodebidda.com/",
  "repository": "git@github.com:jackdbd/personal-website.git",
  "keywords": [
    "11ty",
    "blog",
    "JAMstack",
    "portfolio",
    "workbox"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run build:11ty && npm run build:css && npm run build:headers",
    "build:11ty": "npx @11ty/eleventy --config ./config/eleventy.mjs",
    "build:css": "postcss ./config/input.css --output _site/assets/css/style.css --config ./config --env production --verbose",
    "build:headers": "DEBUG='csp:hash,csp:source-values,hosting-utils:*,script:*' node scripts/headers.mjs",
    "postbuild": "ls --size --human-readable _site/ | head -n 1",
    "clean": "find _site/* -not -name 'README.md' -delete",
    "debug": "NODE_OPTIONS='--inspect-brk=127.0.0.1:9229' npx @11ty/eleventy --config ./config/eleventy.mjs",
    "deps": "taze",
    "predev": "npm run clean",
    "dev": "run-p dev:*",
    "dev:11ty": "eleventy --config ./config/eleventy.mjs --serve --port 8080",
    "dev:css": "postcss ./config/input.css --output _site/assets/css/style.css --config ./config --env development --watch --verbose",
    "format": "prettier --config ./config/prettier.cjs --write '{,!(node_modules)/}**/*.(cjs|js|mjs|ts)'",
    "headers:home": "google-chrome https://securityheaders.com/?q=${DOMAIN}&followRedirects=on&hide=on",
    "headers:home:alternative": "google-chrome https://observatory.mozilla.org/analyze/${DOMAIN}",
    "lh": "npm-run-all --parallel lh:blog lh:home --serial lh:reports",
    "lh:article": "run-p lh:article:*",
    "lh:article:desktop": "lighthouse https://www.${DOMAIN}/posts/${ARTICLE_SLUG}/ --config-path ./lighthouse/config/desktop.js --budget-path=./lighthouse/budgets/all-desktop.json --output-path=./lighthouse/reports/article-desktop.html --quiet",
    "lh:article:mobile": "lighthouse https://www.${DOMAIN}/posts/${ARTICLE_SLUG}/ --config-path ./lighthouse/config/mobile.js --budget-path=./lighthouse/budgets/all-mobile.json --output-path=./lighthouse/reports/article-mobile.html --quiet",
    "lh:blog": "run-p lh:blog:*",
    "lh:blog:desktop": "lighthouse https://www.$DOMAIN/blog/ --config-path ./lighthouse/config/desktop.js --budget-path=./lighthouse/budgets/all-desktop.json --output-path=./lighthouse/reports/blog-desktop.html --quiet",
    "lh:blog:mobile": "lighthouse https://www.$DOMAIN/blog/ --config-path ./lighthouse/config/mobile.js --budget-path=./lighthouse/budgets/all-mobile.json --output-path=./lighthouse/reports/blog-mobile.html --quiet",
    "lh:audits": "lighthouse --list-all-audits",
    "lh:contact": "run-p lh:contact:*",
    "lh:contact:desktop": "lighthouse https://www.$DOMAIN/contact/ --config-path ./lighthouse/config/desktop.js --budget-path=./lighthouse/budgets/all-desktop.json --output-path=./lighthouse/reports/contact-desktop.html --quiet",
    "lh:contact:mobile": "lighthouse https://www.$DOMAIN/contact/ --config-path ./lighthouse/config/mobile.js --budget-path=./lighthouse/budgets/all-mobile.json --output-path=./lighthouse/reports/contact-mobile.html --quiet",
    "lh:home": "run-p lh:home:*",
    "lh:home:desktop": "lighthouse https://www.$DOMAIN/ --config-path ./lighthouse/config/desktop.js --budget-path=./lighthouse/budgets/all-desktop.json --output-path=./lighthouse/reports/home-desktop.html --quiet",
    "lh:home:mobile": "lighthouse https://www.$DOMAIN/ --config-path ./lighthouse/config/mobile.js --budget-path=./lighthouse/budgets/all-mobile.json --output-path=./lighthouse/reports/home-mobile.html --quiet",
    "lh:projects": "run-p lh:projects:*",
    "lh:projects:desktop": "lighthouse $DOMAIN/projects/ --config-path ./lighthouse/config/desktop.js --budget-path=./lighthouse/budgets/all-desktop.json --output-path=./lighthouse/reports/projects-desktop.html --quiet",
    "lh:projects:mobile": "lighthouse $DOMAIN/projects/ --config-path ./lighthouse/config/mobile.js --budget-path=./lighthouse/budgets/all-mobile.json --output-path=./lighthouse/reports/projects-mobile.html --quiet",
    "lh:reports": "serve lighthouse/reports/",
    "lhci": "lhci autorun --config lighthouse/lighthouserc-local.js",
    "nuke": "rm -rf package-lock.json node_modules/ .cache/",
    "scripts:export-openpgp-keypair": "tsm scripts/export-openpgp-keypair.ts",
    "scripts:plausible": "./scripts/plausible.mjs",
    "scripts:report-security-issue": "node ./scripts/report-security-issue.mjs",
    "scripts:security-txt": "node ./scripts/security-txt.mjs",
    "site": "run-p site:* --print-label",
    "site:open": "google-chrome http://localhost:3000",
    "site:serve": "serve _site/ -p 3000",
    "test": "echo TODO write some e2e test with playwright",
    "webhint:blog": "hint $DOMAIN/blog/",
    "webhint:home": "hint $DOMAIN/",
    "webhint:projects": "hint $DOMAIN/projects/",
    "webhint:reports": "serve hint-report/",
    "wrangler": "wrangler pages dev _site --compatibility-date=2024-01-04 --port=8788 --live-reload --log-level=info --binding TELEGRAM=$TELEGRAM"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ],
  "dependencies": {
    "@11ty/eleventy": "3.0.0-alpha.6",
    "@11ty/eleventy-fetch": "^4.0.1",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@11ty/eleventy-plugin-webc": "^0.11.2",
    "@11ty/is-land": "^4.0.0",
    "@google-cloud/storage": "^7.10.2",
    "@google-cloud/text-to-speech": "^5.2.0",
    "@jackdbd/content-security-policy": "^3.0.0",
    "@jackdbd/eleventy-plugin-ensure-env-vars": "^1.2.0",
    "@jackdbd/eleventy-plugin-telegram": "^2.2.0",
    "@jackdbd/eleventy-plugin-text-to-speech": "3.1.0",
    "@jackdbd/hosting-utils": "^1.0.0",
    "@jackdbd/permissions-policy": "^1.0.0",
    "autoprefixer": "^10.4.19",
    "clean-css": "^5.3.3",
    "cloudinary": "^2.2.0",
    "cssnano": "^6.1.2",
    "debug": "^4.3.4",
    "eleventy-plugin-broken-links": "^2.2.1",
    "eleventy-plugin-embed-cloudinary": "^1.0.2",
    "eleventy-plugin-embed-twitter": "^1.4.0",
    "eleventy-plugin-emoji": "^1.1.0",
    "eleventy-plugin-helmet": "^0.2.2",
    "eleventy-plugin-nesting-toc": "^1.3.0",
    "eleventy-plugin-reading-time": "^0.0.1",
    "eleventy-plugin-vimeo-embed": "^1.3.8",
    "eleventy-plugin-youtube-embed": "^1.10.2",
    "esbuild": "^0.20.2",
    "globby": "^14.0.1",
    "html-minifier-terser": "^7.2.0",
    "instant.page": "^5.2.0",
    "luxon": "^3.4.4",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^8.6.7",
    "npm-run-all": "^4.1.5",
    "pagefind": "^1.1.0",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "sanitize-html": "^2.13.0",
    "slugify": "^1.6.6",
    "stripe": "^15.5.0",
    "tailwindcss": "^3.4.3",
    "terser": "^5.31.0",
    "workbox-build": "^7.1.0",
    "workbox-core": "^7.1.0",
    "workbox-expiration": "^7.1.0",
    "workbox-precaching": "^7.1.0",
    "workbox-routing": "^7.1.0",
    "zod": "^3.23.5"
  },
  "devDependencies": {
    "@hint/hint-performance-budget": "^2.4.26",
    "@jackdbd/checks": "^2.0.0",
    "@types/yargs": "^17.0.32",
    "form-data": "^4.0.0",
    "himalaya": "^1.1.0",
    "hint": "^7.1.11",
    "lighthouse": "^12.0.0",
    "openpgp": "^5.11.1",
    "playwright": "^1.43.1",
    "playwright-start": "^1.1.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "pretty-error": "^4.0.0",
    "serve": "^14.2.3",
    "snoowrap": "^1.23.0",
    "taze": "latest",
    "tsm": "^2.3.0",
    "typescript": "^5.4.5",
    "uuid": "^9.0.1",
    "wrangler": "^3.53.1",
    "yargs": "^17.7.2"
  },
  "overrides": {
    "@jackdbd/eleventy-plugin-text-to-speech": {
      "@11ty/eleventy": "3.0.0-alpha.6"
    },
    "eleventy-plugin-embed-cloudinary": {
      "@11ty/eleventy": "3.0.0-alpha.6"
    },
    "eleventy-plugin-helmet": {
      "@11ty/eleventy": "3.0.0-alpha.6"
    }
  }
}
