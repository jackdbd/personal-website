{
  "name": "personal-website",
  "description": "My personal website and blog",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Giacomo Debidda",
  "homepage": "https://www.giacomodebidda.com/",
  "repository": "git@github.com:jackdbd/personal-website.git",
  "keywords": [
    "11ty",
    "blog",
    "JAMstack",
    "tailwindcss"
  ],
  "scripts": {
    "admin": "netlify open --admin",
    "prebuild": "npm run clean",
    "build": "npm-run-all --parallel prod:*",
    "postbuild": "ls --size --human-readable _site/ | head -n 1",
    "clean": "rimraf _site",
    "debug": "DEBUG=* eleventy",
    "deploy-preview": "netlify deploy -m 'Deploy from Netlify CLI' --debug --open",
    "format": "prettier --write '{,!(node_modules)/}**/*.js'",
    "lighthouse:audits": "lighthouse --list-all-audits",
    "lighthouse:home": "lighthouse $DOMAIN/ --budget-path=./web-perf/budget.json --output-path=./web-perf/lighthouse-report.html --quiet --view",
    "lighthouse:headless": "lighthouse $DOMAIN/ --chrome-flags=\"--headless\" --output json --output-path web-perf/lighthouse-report.json",
    "lighthouse:blog": "lighthouse $DOMAIN/blog/ --budget-path=./web-perf/budget.json --output-path=./web-perf/lighthouse-report.html --quiet --view",
    "lighthouse:projects": "lighthouse $DOMAIN/projects/ --budget-path=./web-perf/budget.json --output-path=./web-perf/lighthouse-report.html --quiet --view",
    "predev": "npm run clean",
    "dev": "npm-run-all --parallel dev:*",
    "dev:eleventy": "eleventy --serve --quiet",
    "dev:tailwind": "tailwindcss build src/includes/assets/css/styles.css -o _site/assets/css/style.css",
    "menu": "ntl --info",
    "minify:css": "node minify-css.js",
    "ncu": "ncu --help",
    "ncuu": "ncu --doctor --upgrade",
    "prod:11ty": "ELEVENTY_PRODUCTION=true eleventy",
    "prod:css": "NODE_ENV=production tailwindcss build src/includes/assets/css/styles.css -o _site/assets/css/style.css",
    "test": "true",
    "webhint:home": "hint $DOMAIN/",
    "webhint:blog": "hint $DOMAIN/blog/",
    "webhint:reports": "python -m webbrowser hint-report"
  },
  "devDependencies": {
    "@11ty/eleventy": "0.12.1",
    "@11ty/eleventy-navigation": "0.1.6",
    "@11ty/eleventy-plugin-rss": "1.1.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "3.1.0",
    "@tailwindcss/forms": "0.2.1",
    "@tailwindcss/typography": "0.4.0",
    "@toycode/markdown-it-class": "1.2.4",
    "autoprefixer": "10.2.5",
    "clean-css": "5.1.2",
    "eleventy-plugin-blog-tools": "0.3.1",
    "eleventy-plugin-helmet": "0.2.2",
    "eleventy-plugin-pwa": "1.0.8",
    "eleventy-plugin-reading-time": "0.0.1",
    "eleventy-plugin-toc": "1.1.0",
    "hint": "6.1.3",
    "html-minifier": "4.0.0",
    "lighthouse": "7.3.0",
    "luxon": "1.26.0",
    "markdown-it": "12.0.4",
    "markdown-it-anchor": "7.1.0",
    "npm-check-updates": "11.3.0",
    "npm-run-all": "4.1.5",
    "ntl": "5.1.0",
    "postcss": "8.2.8",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "tailwindcss": "2.0.4",
    "uglify-es": "3.3.9"
  }
}
