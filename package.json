{
  "name": "personal-website",
  "description": "My personal website and blog",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Giacomo Debidda",
  "homepage": "https://www.giacomodebidda.com/",
  "repository": "git@github.com:jackdbd/personal-website.git",
  "keywords": [
    "11ty",
    "blog",
    "JAMstack",
    "tailwindcss",
    "workbox"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm-run-all --parallel build:* --serial build-sw",
    "build:11ty": "ELEVENTY_ENV=production eleventy",
    "build:css": "NODE_ENV=production postcss src/includes/assets/css/styles.css -o _site/assets/css/style.css --verbose && node minify-css.js",
    "build-sw": "workbox generateSW workbox-config.js",
    "postbuild": "ls --size --human-readable _site/ | head -n 1",
    "clean": "find _site/* -not -name 'README.md' -delete",
    "debug": "DEBUG=* eleventy",
    "format": "prettier --write '{,!(node_modules)/}**/*.js'",
    "headers:blog": "chromium-browser https://securityheaders.com/?q=$DOMAIN/blog/",
    "headers:home": "chromium-browser https://securityheaders.com/?q=$DOMAIN/ https://observatory.mozilla.org/analyze/$WEBSITE_HOME",
    "lh": "npm-run-all --parallel lh:blog lh:home --serial lh:reports",
    "lh:article": "npm-run-all --parallel lh:article:*",
    "lh:article:desktop": "lighthouse $DOMAIN/posts/$ARTICLE_SLUG/ --config-path ./lighthouse/config/desktop.js --budget-path=./lighthouse/budgets.json --output-path=./lighthouse/reports/article-desktop.html --quiet",
    "lh:article:mobile": "lighthouse $DOMAIN/posts/$ARTICLE_SLUG/ --config-path ./lighthouse/config/mobile.js --budget-path=./lighthouse/budgets.json --output-path=./lighthouse/reports/article-mobile.html --quiet",
    "lh:blog": "npm-run-all --parallel lh:blog:*",
    "lh:blog:desktop": "lighthouse $DOMAIN/blog/ --config-path ./lighthouse/config/desktop.js --budget-path=./lighthouse/budgets.json --output-path=./lighthouse/reports/blog-desktop.html --quiet",
    "lh:blog:mobile": "lighthouse $DOMAIN/blog/ --config-path ./lighthouse/config/mobile.js --budget-path=./lighthouse/budgets.json --output-path=./lighthouse/reports/blog-mobile.html --quiet",
    "lh:contact": "npm-run-all --parallel lh:contact:*",
    "lh:contact:desktop": "lighthouse $DOMAIN/contact/ --config-path ./lighthouse/config/desktop.js --budget-path=./lighthouse/budgets.json --output-path=./lighthouse/reports/contact-desktop.html --quiet",
    "lh:contact:mobile": "lighthouse $DOMAIN/contact/ --config-path ./lighthouse/config/mobile.js --budget-path=./lighthouse/budgets.json --output-path=./lighthouse/reports/contact-mobile.html --quiet",
    "lh:home": "npm-run-all --parallel lh:home:*",
    "lh:home:desktop": "lighthouse $DOMAIN/ --config-path ./lighthouse/config/desktop.js --budget-path=./lighthouse/budgets.json --output-path=./lighthouse/reports/home-desktop.html --quiet",
    "lh:home:mobile": "lighthouse $DOMAIN/ --config-path ./lighthouse/config/mobile.js --budget-path=./lighthouse/budgets.json --output-path=./lighthouse/reports/home-mobile.html --quiet",
    "lh:projects": "npm-run-all --parallel lh:projects:*",
    "lh:projects:desktop": "lighthouse $DOMAIN/projects/ --config-path ./lighthouse/config/desktop.js --budget-path=./lighthouse/budgets.json --output-path=./lighthouse/reports/projects-desktop.html --quiet",
    "lh:projects:mobile": "lighthouse $DOMAIN/projects/ --config-path ./lighthouse/config/mobile.js --budget-path=./lighthouse/budgets.json --output-path=./lighthouse/reports/projects-mobile.html --quiet",
    "lh:reports": "python -m webbrowser lighthouse/reports/",
    "lhci": "npm run lhci:collect && npm run lhci:assert",
    "lhci:assert": "lhci assert --budgetsFile ./lighthouse/budgets.json",
    "lhci:autorun": "lhci autorun",
    "lhci:collect": "lhci collect --config .lighthouserc.js",
    "netlify:admin": "netlify open --admin",
    "netlify:deploy-preview": "netlify deploy -m 'Deploy from Netlify CLI' --debug --open",
    "netlify:dev": "netlify dev --command 'npm run dev' --live",
    "predev": "npm run clean",
    "dev": "npm-run-all --parallel dev:*",
    "dev:11ty": "ELEVENTY_ENV=development eleventy --serve --quiet",
    "dev:css": "NODE_ENV=development postcss src/includes/assets/css/styles.css -o _site/assets/css/style.css --watch --verbose",
    "dev:sw": "chokidar 'workbox-config.js' --verbose --initial --command 'npm run build-sw'",
    "menu": "ntl --info",
    "ncu": "ncu --loglevel verbose",
    "ncuu": "ncu --doctor --upgrade",
    "test": "echo TODO tests with puppeteer, playwright, taiko, or cypress",
    "versions": "eleventy --version && postcss --version && tailwindcss --version && netlify --version",
    "webhint:blog": "hint $DOMAIN/blog/",
    "webhint:home": "hint $DOMAIN/",
    "webhint:projects": "hint $DOMAIN/projects/",
    "webhint:reports": "python -m webbrowser hint-report/",
    "webperf:blog": "npm-run-all --parallel lh:blog headers:blog",
    "webperf:home": "npm-run-all --parallel lh:home headers:home"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ],
  "devDependencies": {
    "@11ty/eleventy": "0.12.1",
    "@11ty/eleventy-navigation": "0.1.6",
    "@11ty/eleventy-plugin-rss": "1.1.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "3.1.0",
    "@hint/hint-performance-budget": "^2.4.9",
    "@tailwindcss/forms": "0.3.2",
    "@tailwindcss/jit": "0.1.17",
    "@tailwindcss/typography": "0.4.0",
    "@toycode/markdown-it-class": "1.2.4",
    "autoprefixer": "10.2.5",
    "chokidar-cli": "2.1.0",
    "clean-css": "5.1.2",
    "eleventy-plugin-blog-tools": "0.3.1",
    "eleventy-plugin-reading-time": "0.0.1",
    "eleventy-plugin-toc": "1.1.0",
    "hint": "^6.1.3",
    "html-minifier": "4.0.0",
    "lighthouse": "7.3.0",
    "luxon": "1.26.0",
    "markdown-it": "12.0.4",
    "markdown-it-anchor": "7.1.0",
    "npm-check-updates": "11.3.0",
    "npm-run-all": "4.1.5",
    "ntl": "5.1.0",
    "postcss": "8.2.8",
    "postcss-cli": "8.3.1",
    "prettier": "2.2.1",
    "tailwindcss": "2.0.4",
    "uglify-es": "3.3.9",
    "workbox-cli": "6.1.2"
  }
}
